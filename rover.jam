// Find water source
Plan: {
  NAME:
  	"Find Water Source"
  GOAL:
  	ACHIEVE FindAllWaterSources;
  BODY:
      PERFORM ExploratoryRoutine;
      // WAIT ExploratoryRoutine;
      EXECUTE print "ExploratoryRoutine is done";

}

// ExploratoryRoutine
Plan: {
  NAME:
  	""
  GOAL:
  	PERFORM ExploratoryRoutine;
  CONTEXT:
    // RETRIEVE COMPARTMENT_FULL $compartment_full;
    // (== compartment_full "False")
    FACT COMPARTMENT_FULL "False";
  BODY:
    RETRIEVE CURR_POS $x $y;
    RETRIEVE MAX_XY $MAX_X $MAX_Y;
    RETRIEVE VELOCITY $velocity;

    WHILE: TEST (<= $x $MAX_X){
        ASSIGN $y (+ $y $velocity);
        PERFORM MoveTo $x $y;
        PERFORM CheckAndStore;
        WHEN: TEST (|| (== $y $MAX_Y) (== $y 0)){
          ASSIGN $x (+ $x 1);
          ASSIGN $velocity (* $velocity -1);
        };
    };


  EFFECTS:
    EXECUTE print "succeeded";
}

