// CheckIfRockAround
Plan: {
  NAME:
  	""
  GOAL:
  	PERFORM CheckIfRockAround $waterIsFound;
  BODY:
    ASSIGN $i 0;
    RETRIEVEALL $rocks ROCK $X $Y $hasWater;
    RETRIEVE CURR_POS $x $y;

    WHILE: TEST (< $i 5){
      NEXTFACT $rocks ROCK $X $Y $hasWater;
      WHEN: TEST (&& (== $x $X) (== $y $Y) (== $hasWater "True")){
        ASSIGN $waterIsFound "True";
      };
      ASSIGN $i (+ $i 1);
    };
    // WHEN: TESTS (== $waterIsFound "False"){
