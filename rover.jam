// ExploratoryRoutine
Plan: {
  NAME:
  	""
  GOAL:
  	PERFORM ExploratoryRoutine;
  CONTEXT:
    FACT EXPLORATORY_MODE "ON";
  BODY:
    RETRIEVE CURR_POS $x $y;
    RETRIEVE MAX_XY $MAX_X $MAX_Y;
    RETRIEVE VELOCITY $velocity;

    WHEN: TEST (== (FACT EXPLOR_START_POS $x $y) (== "True" "False")) {
      EXECUTE print "lol";
    };

    WHILE: TEST (<= $x $MAX_X){
        ASSIGN $y (+ $y $velocity);
        PERFORM MoveTo $x $y;
        PERFORM CheckAndStore $x $y;
        WHEN: TEST (|| (== $y $MAX_Y) (== $y 0)){
          SUCCEED;
          ASSIGN $x (+ $x 1);
          ASSIGN $velocity (* $velocity -1);
        };
    };
  EFFECTS:
    EXECUTE print "\nMISSION COMPLETE!";
}

