// CheckIfRockAround
Plan: {
  NAME:
  	""
  GOAL:
  	PERFORM CheckIfRockAround $rockIsFound $x $y;
  BODY:
    ASSIGN $i 0;
    RETRIEVEALL $rocks ROCK $X $Y;

    WHILE: TEST (< $i 5){
      NEXTFACT $rocks ROCK $X $Y;
      WHEN: TEST (&& (== $x $X) (== $y $Y)){
        ASSIGN $rockIsFound "True";
      };
      ASSIGN $i (+ $i 1);
    };
}
